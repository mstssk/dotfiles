{
  "title": "Thinkpad mouse scroll",
  "rules": [
    {
      "description": "Change button3 + mouse motion to scroll wheel",
      "available_since": "12.3.0",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "enable_mouse_motion_to_scroll",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "enable_mouse_motion_to_scroll",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "repeat": true,
              "pointing_button": "button3"
            }
          ]
        },
        {
          "type": "mouse_motion_to_scroll",
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "enable_mouse_motion_to_scroll",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}